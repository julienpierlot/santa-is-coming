section.hero.is-primary
  .hero-body
    .hero-container
      h1.title Child information
      p
        |Name: 
        = @child.name
      p
        |Age: 
        = @child.age
      p
        |Behavior this year: 
        = @child.behavior

section.section
  .buttons
    - if !@child.list
      =link_to "Create Christmas list", child_new_list_path(@child), class: "button is-warning"
    =link_to "Back to house", house_path(@house), class: "button is-warning"

- if @child.list
  section.section
    .tile.is-ancestor
      .tile.is-parent
        .tile.is-child.box
          .content
            h3.title
              =link_to "##{@child.list.id}", child_list_path(@child)
            p
              |Number of gifts: 
              = @child.gifts.count
